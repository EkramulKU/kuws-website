<!DOCTYPE html>
<html lang="bn">
<head>
  <meta charset="UTF-8">
  <title>{{ title or "KU Writers' Society" }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- SEO -->
  <meta name="description" content="{{ og_description or highlight or '' }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ og_title or title }}">
  <meta property="og:description" content="{{ og_description or highlight }}">
  {% if og_image %}
  <meta property="og:image" content="{{ og_image }}">
  {% endif %}
  <meta property="og:type" content="article">
  <meta property="og:site_name" content="KU Writers' Society">

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- SolaimanLipi -->
  <link href="https://fonts.maateen.me/solaiman-lipi/font.css" rel="stylesheet">

  <style>
    body {
      font-family: 'SolaimanLipi', sans-serif;
    }
    .lekha-body p {
      margin-bottom: 1rem;
      line-height: 1.9;
      text-align: justify;
    }
  </style>
</head>

<body class="bg-gray-50 text-gray-800">

  {% include "header.njk" %}

  <main class="min-h-screen">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

</body>
</html>
