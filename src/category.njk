---
layout: base.njk
pagination:
  data: collections.writings
  size: 6
  alias: posts
permalink: "/category/{{ type | slug }}/{{ pagination.pageNumber | plus: 1 }}/index.html"
eleventyComputed:
  type: "{{ type }}"
---

{% set filtered = posts | filterByType(type) %}

<section class="max-w-6xl mx-auto px-4 py-12 font-bangla">

  <h1 class="text-3xl font-bold text-ku-blue mb-8">
    {{ type }}
  </h1>

  <div class="grid md:grid-cols-2 gap-8">
    {% for post in filtered %}
      <a href="/lekha/{{ post.fileSlug }}/"
         class="block bg-white rounded-xl shadow p-6 hover:shadow-lg transition">

        {% if post.data.image %}
        <div class="h-40 overflow-hidden rounded mb-4">
          <img src="{{ post.data.image }}" class="w-full h-full object-cover">
        </div>
        {% endif %}

        <h2 class="text-xl font-bold text-ku-blue mb-2">
          {{ post.data.title }}
        </h2>

        <p class="text-sm text-gray-600 mb-2">
          {{ post.data.writer }} | {{ post.data.date | readableDate }}
        </p>

        <p class="italic text-gray-700">
          “{{ post.data.highlight }}”
        </p>
      </a>
    {% endfor %}
  </div>

  <!-- Pagination -->
  <div class="flex justify-center gap-4 mt-12 text-sm font-semibold">

    {% if pagination.href.previous %}
      <a href="{{ pagination.href.previous }}"
         class="px-4 py-2 bg-ku-blue text-white rounded">
        ← আগের
      </a>
    {% endif %}

    {% if pagination.href.next %}
      <a href="{{ pagination.href.next }}"
         class="px-4 py-2 bg-ku-blue text-white rounded">
        পরের →
      </a>
    {% endif %}

  </div>

</section>

