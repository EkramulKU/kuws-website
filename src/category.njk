---
pagination:
  data: categories
  size: 1
  alias: categoryItems
permalink: "category/{{ pagination.key | slugify }}/index.html"
layout: base.njk
---

<h1 class="text-3xl font-bold text-ku-blue mb-6">
  {{ pagination.key }}
</h1>

<div class="grid md:grid-cols-2 gap-6">
{% for post in categoryItems | reverse %}
  <a href="{{ post.url }}" class="block bg-white rounded-xl shadow p-5 hover:shadow-lg transition">

    {% if post.data.image %}
    <div class="h-40 overflow-hidden rounded mb-3">
      <img src="{{ post.data.image }}" class="w-full h-full object-cover">
    </div>
    {% endif %}

    <h2 class="text-xl font-bold text-ku-blue mb-1">
      {{ post.data.title }}
    </h2>

    <p class="text-sm text-gray-600 mb-2">
      {{ post.data.writer }} | {{ post.data.date | date("dd-MM-yyyy") }}
    </p>

    <p class="italic text-gray-700">
      “{{ post.data.highlight }}”
    </p>

  </a>
{% endfor %}
</div>
